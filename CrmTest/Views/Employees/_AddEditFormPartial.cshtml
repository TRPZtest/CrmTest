@model CrmTest.Models.AddEditEmployeeModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Employee.FullName" class="control-label"></label>
    <input asp-for="Employee.FullName" class="form-control" />
    <span asp-validation-for="Employee.FullName" class="text-danger"></span>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Employee.Subvision, htmlAttributes: new { @class = "control-label" })
    <div class="form-group">
        @Html.DropDownListFor(model => model.Employee.SubvisionId, new SelectList(Model.Subdivisions.ToDictionary(x => x.Id, x => x.Name), "Key", "Value"), "--Select--", new { @class = "form-select form-control" })
        @Html.ValidationMessageFor(model => model.Employee.SubvisionId, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Employee.Position, htmlAttributes: new { @class = "control-label" })
    <div class="form-group">
        @Html.DropDownListFor(model => model.Employee.PositionId, new SelectList(Model.Positions.ToDictionary(x => x.Id, x => x.Name), "Key", "Value"), "--Select--", new { @class = "form-select form-control", autocomplete = "on" })
        @Html.ValidationMessageFor(model => model.Employee.PositionId, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Employee.PeoplePartner, htmlAttributes: new { @class = "control-label" })
    <div class="form-group">
        @Html.DropDownListFor(model => model.Employee.PeoplePartnerId, new SelectList(Model.Hrs.ToDictionary(x => x.Id, x => x.FullName), "Key", "Value"), "--Select--", new { @class = "form-select form-control", autocomplete = "on" })
        @Html.ValidationMessageFor(model => model.Employee.PeoplePartnerId, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    <label asp-for="Employee.OutOfOfficeBalance" class="control-label"></label>
    <input asp-for="Employee.OutOfOfficeBalance" class="form-control" />
    <span asp-validation-for="Employee.OutOfOfficeBalance" class="text-danger"></span>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Employee.IsActive" /> @Html.DisplayNameFor(model => model.Employee.IsActive)
    </label>
</div>
